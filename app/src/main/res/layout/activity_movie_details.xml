<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_tema">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_image1"
            android:scaleType="centerCrop"
            android:src="@drawable/main_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/nameMain"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0sp"
            android:text="@string/name"
            android:textAppearance="@style/name"
            android:textColor="@color/whiteMain"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/genre"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/main_image" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/standartMargin"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4sp"
            android:text="@string/tag"
            android:textAppearance="@style/tag"
            app:layout_constraintBottom_toTopOf="@+id/rewiews"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/nameMain" />

        <ImageView
            android:id="@+id/imStarRed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/star1"
            android:src="@drawable/star"
            app:layout_constraintBottom_toTopOf="@+id/storyline"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/genre"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imStarRed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:contentDescription="@string/star1"
            android:src="@drawable/star"
            app:layout_constraintBottom_toTopOf="@+id/storyline"
            app:layout_constraintStart_toEndOf="@+id/imStarRed1"
            app:layout_constraintTop_toTopOf="@+id/imStarRed1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imStarRed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/star1"
            android:src="@drawable/star"
            app:layout_constraintStart_toEndOf="@+id/imStarRed2"
            app:layout_constraintTop_toTopOf="@+id/imStarRed2" />

        <ImageView
            android:id="@+id/imStarRed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/star1"
            android:src="@drawable/star"
            app:layout_constraintStart_toEndOf="@+id/imStarRed3"
            app:layout_constraintTop_toTopOf="@+id/imStarRed3" />

        <ImageView
            android:id="@+id/imStarWhite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/starwhite"
            android:src="@drawable/star1"
            app:layout_constraintStart_toEndOf="@+id/imStarRed4"
            app:layout_constraintTop_toTopOf="@+id/imStarRed4" />

        <TextView
            android:id="@+id/rewiews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="211dp"
            android:includeFontPadding="false"
            android:text="@string/_125_reviews"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imStarWhite1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_Big"
            android:includeFontPadding="false"
            android:text="@string/storyline"
            android:textColor="@color/whiteMain"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/rewiews"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="@string/age"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/nameMain"
            app:layout_constraintEnd_toEndOf="@+id/main_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toTopOf="@+id/main_image"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textBack"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/path"
            app:layout_constraintBottom_toBottomOf="@+id/main_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toTopOf="@+id/main_image"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="@string/description"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/storyline"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cast_actors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:text="@string/cast"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/actor1_downey"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="@string/robert_downey"
            android:src="@mipmap/downey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/actor2_evans"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/cast_actors"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/actor2_evans"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="@string/chris_evans"
            android:src="@mipmap/evans"
            app:layout_constraintBottom_toTopOf="@+id/actor1_name"
            app:layout_constraintEnd_toStartOf="@+id/actor3_ruffalo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor1_downey"
            app:layout_constraintTop_toBottomOf="@+id/cast_actors" />

        <ImageView
            android:id="@+id/actor3_ruffalo"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="@string/mark_ruffalo"
            android:src="@mipmap/ruffalo"
            app:layout_constraintBottom_toTopOf="@+id/actor1_name"
            app:layout_constraintEnd_toStartOf="@+id/actor4_hemsword"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor2_evans"
            app:layout_constraintTop_toBottomOf="@+id/cast_actors" />

        <ImageView
            android:id="@+id/actor4_hemsword"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:contentDescription="@string/chris_hemsworth"
            android:src="@mipmap/hemsword"
            app:layout_constraintBottom_toTopOf="@+id/actor1_name"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor3_ruffalo"
            app:layout_constraintTop_toBottomOf="@+id/cast_actors" />

        <TextView
            android:id="@+id/actor1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="101dp"
            android:includeFontPadding="false"
            android:text="@string/robert_ndowney_jr"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/actor2_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/actor1_downey"
            app:layout_constraintTop_toBottomOf="@+id/actor1_downey"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/actor2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="101dp"
            android:includeFontPadding="false"
            android:text="@string/chris_nevans"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/actor3_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/actor2_evans"
            app:layout_constraintTop_toBottomOf="@+id/actor2_evans"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/actor3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="101dp"
            android:includeFontPadding="false"
            android:text="@string/mark_nruffalo"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/actor4_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/actor3_ruffalo"
            app:layout_constraintTop_toBottomOf="@+id/actor3_ruffalo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/actor4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="101dp"
            android:includeFontPadding="false"
            android:text="@string/chris_nhemsworth"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/actor4_hemsword"
            app:layout_constraintTop_toBottomOf="@+id/actor4_hemsword"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="377dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>